const express = require('express');
const router = express.Router();

router.get('/',(req, res, next) => {
    res.render('forms/twoinputs', { title: 'Assignment 01',  path: '/pr01'  } );
});

router.post('/',(req, res, next) => {
    res.render('forms/showData', { title: 'Assignment 01',  path: '/pr02', fname: req.body.fn, lname: req.body.ln } );
});

module.exports = router;